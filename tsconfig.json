{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noImplicitAny": true,
        "allowJs": false,
        "target": "es5",
        "module": "commonjs",
        "lib": ["dom", "dom.iterable", "esnext"],
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "paths": {
          // Allow `@/` to map to `src/client/`
          "@/*": ["./src/*"],
        }
      },
    "typeRoots": ["node_modules/@types", "src/@type"],
    "exclude": [
      "node_modules",
      "build",
      "scripts",
      "acceptance-tests",
      "webpack",
      "jest",
      "src/setupTests.ts",
      "./node_modules/**/*",
      "./dist"
],
    "include": ["./src/**/*", "@type"]
}